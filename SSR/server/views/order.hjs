<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>
        <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <a href="/orders/orden/nuevo" class="btn btn-primary">Nuevo</a>
                <table class="table table-hover">
                    <thead>
                        <th>Number Order</th>
                        <th>Date</th>
                        <th>Product Name</th>
                        <th>User Name</th>
                        <th colspan="2">Opciones</th>
                    </thead>
                    {{#ordenes}}
                    <tr>
                        <td>{{numOrder}}</td>
                        <td>{{date}}</td>
                        <td>{{productName}}</td>
                        <td>{{userName}}</td>
                        <td><a href="/orders/orden/modificar/{{_id}}" class="btn btn-primary">Modificar</a></td>
                        <td><a href="/orders/orden/eliminar/{{_id}}" class="btn btn-danger">Eliminar</a></td>
                    </tr>
                    {{/ordenes}}
                </table> 
                <a href="/" class="btn btn-primary">Atr√°s</a>
            </div>
        </div>
    </body>
</html>