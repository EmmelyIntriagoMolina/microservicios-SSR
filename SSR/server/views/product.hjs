<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>
        <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <a href="/products/producto/nuevo" class="btn btn-primary">Nuevo</a>
                <table class="table table-striped">
                    <thead>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Existence</th>
                        <th>Img</th>
                        <th colspan="2">Opciones</th>
                    </thead>
                    {{#productos}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{description}}</td>
                        <td>{{category}}</td>
                        <td>{{price}}</td>
                        <td>{{existence}}</td>
                        <td>{{img}}</td>
                        <td><a href="/products/producto/modificar/{{_id}}" class="btn btn-primary">Modificar</a></td>
                        <td><a href="/products/producto/eliminar/{{_id}}" class="btn btn-danger">Eliminar</a></td>
                    </tr>
                    {{/productos}}
                </table>  
                <a href="/" class="btn btn-primary">Atr√°s</a>
            </div>
        </div>
    </body>
</html>